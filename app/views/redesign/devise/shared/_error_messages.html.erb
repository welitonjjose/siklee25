<% if resource.errors.any? %>
  <div class="bg-yellow-50 border-t-4 border-yellow-500 rounded-b text-yellow-500 px-4 py-3 shadow-md text-center text-sm"
       role="alert">
    <h2>
      <%= I18n.t('errors.messages.not_saved',
                 count: resource.errors.count,
                 resource: resource.class.model_name.human.downcase)
       %>
    </h2>
  </div>
<% end %>
