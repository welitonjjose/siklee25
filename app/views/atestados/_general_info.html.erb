<div class="pt-3">
  <p>
    <strong>Instituição de Saúde:</strong>
    <%= medical_certificate.instituicao_de_saude %>
  </p>

  <% unless medical_certificate.cnpj.blank? %>
    <p>
      <strong>CNPJ:</strong>
      <%= medical_certificate.cnpj %>
    </p>
  <% end %>

  <% unless medical_certificate.telefone.blank? %>
    <p>
      <strong>Telefone:</strong>
      <%= medical_certificate.telefone %>
    </p>
  <% end %>

  <% unless medical_certificate.endereco.blank? %>
    <p>
      <strong>Endereço:</strong>
      <%= medical_certificate.endereco %>
    </p>
  <% end %>

  <% unless medical_certificate.cidade.blank? %>
    <p>
      <strong>Cidade:</strong>
      <%= medical_certificate.cidade %>
    </p>
  <% end %>

  <% unless medical_certificate.estado.blank? %>
    <p>
      <strong>Estado:</strong>
      <%= medical_certificate.estado %>
    </p>
  <% end %>

  <% unless medical_certificate.cep.blank? %>
    <p>
      <strong>CEP:</strong>
      <%= medical_certificate.cep %>
    </p>
  <% end %>
</div>

<div class="pt-3">
  <p>
    <strong>Nome do Paciente:</strong>
    <%= medical_certificate.nome_funcionario %>
  </p>

  <% unless medical_certificate.cpf_funcionario.blank? %>
    <p>
      <strong>CPF:</strong>
      <%= medical_certificate.cpf_funcionario %>
    </p>
  <% end %>

  <% unless medical_certificate.rg_funcionario.blank? %>
    <p>
      <strong>RG:</strong>
      <%= medical_certificate.rg_funcionario %>
    </p>
  <% end %>

  <% unless medical_certificate.acesso_funcionario.blank? %>
    <p>
      <strong>Acesso:</strong>
      <%= medical_certificate.acesso_funcionario %>
    </p>
  <% end %>
</div>

<div class="pt-3">
  <p>
    <strong>Tipo de Atestado:</strong>
    <%= medical_certificate.tipo_de_atestado %>
  </p>

  <p>
    <strong>Data de Emissão:</strong>
    <%= medical_certificate.data_de_emissao&.strftime("%d/%m/%Y") %>
  </p>

  <p>
    <strong>Data de Apresentação:</strong>
    <%= medical_certificate.data_de_apresentacao&.strftime("%d/%m/%Y") %>
  </p>

  <% unless medical_certificate.exames.blank? %>
    <p>
      <strong>Exame:</strong>
      <%= medical_certificate.exames %>
    </p>
  <% end %>

  <% unless medical_certificate.exames_complementares.blank? %>
    <p>
      <strong>Exames Complementares:</strong>
      <%= medical_certificate.exames_complementares %>
    </p>
  <% end %>

  <p>
    <strong>CID e ou Descrição:</strong>
    <%= medical_certificate.cid %>
  </p>

  <% unless medical_certificate.tempo_de_dispensa.blank? %>
    <p>
      <strong>Tempo de Dispensa:</strong>
      <%= medical_certificate.tempo_de_dispensa %>
    </p>
  <% end %>

  <% unless medical_certificate.descricao_do_afastamento.blank? %>
    <p>
      <strong>Descrição do Afastamento:</strong>
      <%= medical_certificate.descricao_do_afastamento %>
    </p>
  <% end %>
</div>
