<p class="text-lg lg:text-xl">
  <%= t('.title') %>
</p>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: {
  method: :put,
  class: 'default-form'
}, defaults: {
  wrapper_html: { class: 'default-wrapper-form' },
  input_html: { class: 'custom-input' }
}) do |f| %>
  <%= render "redesign/devise/shared/error_messages", resource: resource %>

  <%= f.hidden_field :reset_password_token %>

  <div class="flex flex-col space-y-2">
    <div class="flex flex-col space-y-2">
      <%= f.label :password, t('.password'), class: 'text-sm' %>

      <div class="flex flex-row bg-gray-100 p-4 space-x-2">
        <%= image_tag 'icons/feather_lock.svg', alt: 'Ícone senha' %>

        <%= f.input :password, required: true, autofocus: true,
          autocomplete: 'new-password', placeholder: 'Digite sua nova senha', label: false %>
      </div>

      <% if @minimum_password_length %>
        <em>(<%= t('.characters_minimum', minimum_password_length: @minimum_password_length) %>)</em><br />
      <% end %>
    </div>
  </div>

  <div class="flex flex-col space-y-2">
    <div class="flex flex-col space-y-2">
      <%= f.label :password_confirmation, t('.password_confirmation'), class: 'text-sm' %>

      <div class="flex flex-row bg-gray-100 p-4 space-x-2">
        <%= image_tag 'icons/feather_lock.svg', alt: 'Ícone senha' %>

        <%= f.input :password_confirmation, required: true, autofocus: true,
          autocomplete: 'new-password', placeholder: 'Digite sua nova senha', label: false %>
      </div>
    </div>
  </div>

  <%= f.button :submit, 'Redefinir minha senha', class: 'button' %>
<% end %>

<%= render 'devise/shared/links' %>
